<div class="container">
  <div class="row justify-content-center">
    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-8 col-xs-8 my-5">
      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

          <div class="form-actions ">
            <%= f.button :submit, "Log in", class: "btn main-btn" %>
            <%= link_to "Sign up", new_registration_path(resource_name) ,class: "secondary-btn"%>
            <%= link_to "Forgot your password?", new_password_path(resource_name) ,class: "secondary-btn " %>
          </div>
      <% end %>
    </div>
  </div>
</div>


