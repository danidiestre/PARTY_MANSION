<div class="container">
  <div class="row justify-content-center">
    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-8 col-xs-8 my-5">
      <h2>Forgot your password?</h2>

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Reset password", class: "main-btn" %>
            <%= link_to "Log in", new_session_path(resource_name),class: "secondary-btn" %>
            <%= link_to "Sign up", new_registration_path(resource_name) ,class: "secondary-btn"%>
          </div>
        <% end %>
    </div>
  </div>
</div>
