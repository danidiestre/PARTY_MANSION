<div class="navbar navbar-expand-sm navbar-light navbar-lewagon <%= "#{controller_name} #{action_name}" %>">
  <div class="container">
    <%= link_to root_path, class: "navbar-brand" do %>
      <div id="logo_name">
        <%= image_tag "logo.png", class: "rotate", alt: "MBNB", width: 100 %>
        <h6 id="name">Mansions Booze & Beats</h6>
      </div>
      <% end %>

  <% if user_signed_in? %>
    <button class="navbar-toggler navbar-image" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-label="Toggle navigation" style="border-color: none">
      <%= cl_image_tag current_user.avatar.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true %>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
        <%= link_to "Home", root_path, class: "dropdown-item" %>
        <%= link_to "Listings", mansions_path, class: "dropdown-item" %>
        <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>         <%= link_to "Add Mansion", new_mansion_path, class: "dropdown-item" %>
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item " %>
      </div>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul style="list-style-type: none">
          <li class="nav-item dropdown dropdown-list">
            <% if current_user.avatar.attached? %>
              <%= cl_image_tag current_user.avatar.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
              <%= cl_image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Home", root_path, class: "dropdown-item" %>
              <%= link_to "Listings", mansions_path, class: "dropdown-item" %>
              <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
              <%= link_to "Add Mansion", new_mansion_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item " %>
            </div>
          </li>
        </ul>
        <% else %>
        <ul class="logout-navbar">
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link login"  %>
          </li>
                <ul>

        <% end %>
    </div>
  </div>
</div>

