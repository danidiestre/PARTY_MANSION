<div class="container">
  <H2 class="my-3">Find your Mansion in Barcelona</H2>
    <div class="search-bar mb-3">
     <%= form_tag mansions_path, method: :get do %>
     <div class="d-flex">
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Search for a mansion"
        %>
        <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
         <i class="fas fa-search"></i>
        <% end %>
        </div>
      <% end %>
    </div>
  <div class="d-flex index-container">
    <div class="mansion-list w-50 h-100">
      <% @mansions.each do |mansion| %>
      <div class="w-100" data-aos="fade-right">
        <%= link_to mansion_path(mansion) do  %>
          <div class="card-product border-card mb-3">
            <% if mansion.photos.attached? %>
              <%= cl_image_tag mansion.photos.first.key, class: "h-100"  %>
            <% end %>
            <div class="card-trip-infos px-3">
              <div>
                <h2> <%= mansion.title %></h2>
                <p> <%= truncate(mansion.description, length: 140) %> </p>
              </div>
              <p class="card-trip-pricing"><strong>Â£ <%= mansion.price %>/night</strong></p>
            </div>
          </div>
        <% end %>
        </div>
      <% end %>
    </div>
      <div id="map"
      style="width: 50%; height: 600px; margin-left: 20px; position: sticky; top:0;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>

  </div>
</div>




